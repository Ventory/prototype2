        <p><span class="warning">{{warning}}</span></p>
          <form action="" method="post">
            <label>Anrede</label>
            <input class="radio" type="radio" name="sex" value="0"> Herr
            <input class="radio" type="radio" name="sex" value="1"> Frau
            <label>Name</label>
            <input type="text" name="nname" placeholder="Name">
            <label>Vorname</label>
            <input type="text" name="vname" placeholder="Vorname">
            <label>E-Mail</label>
            <input type="email" name="email" placeholder="E-Mail">
            <label>Passwort</label>
            <input type="password" name="password" placeholder="Passwort">
            <label>Passwort wiederholen</label>
            <input type="password" name="rpassword" placeholder="Passwort wiederholen">
            <br>
            <input type="hidden" name="language" value="de">
            <input type="submit" value="Sign Up">
          </form>

          <form class="form-horizontal" action="" method="post">
            <div class="form-group">
              <label class="col-sm-2 control-label">Anrede</label>
              <input class="radio" type="radio" name="sex" value="0"> Herr
              <input class="radio" type="radio" name="sex" value="1"> Frau
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Vorname</label>
              <input type="text" class="form-control" name="vname" placeholder="Vorname">
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Nachname
              <input type="text" class="form-control" name="nname" placeholder="Nachname"> 
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Email
              <input type="email" class="form-control" name="email" placeholder="Email"> 
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Passwort
              <input type="password" class="form-control" name="password" placeholder="Passwort"> 
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Passwort wiederholen
              <input type="password" class="form-control" name="rpassword" placeholder="Passwort"> 
              <input type="hidden" name="language" value="de">
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Sign Up</button>
              </div>
            </div>
          </form>

          <form class="form-horizontal">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input type="checkbox"> Remember me
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Sign in</button>
    </div>
  </div>
</form>

